{
  "compilerOptions": {
    "moduleResolution": "node",
    "allowJs": true,
    "module": "commonjs",
    "target": "es2015",
    "sourceMap": true,
    "downlevelIteration": true,
    "inlineSources": true,
    "outDir": "./",
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es5",
      "es2015.core",
      "es2015.collection",
      "es2015.iterable",
      "es2016.array.include" // Supported by Node 6+
    ]
  },
  "files": [
    "plugin.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
